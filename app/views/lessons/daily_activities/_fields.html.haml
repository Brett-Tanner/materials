-# locals: (f:, lesson:)

= f.hidden_field :type, value: lesson.type

.flex.flex-col.gap-2
  = f.label :subtype
  = f.select :subtype,
             DailyActivity.subtypes.keys.map { |k| [k.titleize, k] },
             {}

.flex.flex-col.gap-2
  = f.label :steps
  = f.text_area :steps, value: lesson.steps.join("\n")
  %small Separate steps with new lines

.flex.flex-col.gap-2
  = f.label :links
  = f.text_area :links, value: stringify_links(lesson.links)
  %small
    %p Separate links with new lines and format like:
    %p Link One Text: https://example.com
    %p Link Two Text: https://example2.com
