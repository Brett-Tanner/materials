-# locals: (lesson:)

= form_with model: lesson,
            url: course_lessons_path,
            id: 'daily_activity_form' do |f|
  = render 'lessons/shared_fields', f:, lesson:

  .flex.flex-col.gap-2
    = f.label :subtype
    = f.select :subtype,
               DailyActivity.subtypes.keys.map { |k| [k.titleize, k] },
               {}

  .flex.flex-col.gap-2
    = f.label :steps
    = f.text_area :steps, value: lesson.steps.join("\n")

  .flex.flex-col.gap-2
    = f.label :links
    = f.text_area :links, value: lesson.links.join("\n")

  = f.submit class: 'btn btn-primary'
