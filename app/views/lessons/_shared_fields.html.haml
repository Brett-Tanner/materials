-# locals: (f:, lesson:)

= render 'shared/form_errors', resource: lesson

.flex.flex-col.gap-2
  = f.label :title
  = f.text_field :title

.flex.flex-col.gap-2
  = f.label :summary
  = f.text_area :summary

.flex.flex-col.gap-2
  = f.label :week
  = f.number_field :week, min: 1, max: 52

.flex.flex-col.gap-2
  = f.label :day
  = f.select :day, Lesson.days.transform_keys(&:capitalize)
