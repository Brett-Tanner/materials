-# locals: (f:, lesson:)

= f.hidden_field :type, value: lesson.type

= render 'lessons/shared/pdf_image_field', f:

- unless controller_name == 'proposed_changes'
  .form-group
    = f.label :subtype
    = f.select :subtype,
               Exercise.subtypes.keys.map { |k| [k.titleize, k] },
               {}

- Exercise::LISTABLE_ATTRIBUTES.each do |attr|
  = render('lessons/shared/list_fields', attr:, f:, lesson:)

= render('lessons/shared/link_fields', f:, lesson:)
