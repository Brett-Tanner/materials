-# locals: ()

%nav.flex.items-center.gap-3.bg-main.h-16.text-white.font-bold.px-3
  = link_to root_path do
    %image{ height: '64px', width: '120px', src: org_favicon }
  .flex-grow
  = locale_toggle('fill-white')
  - if controller_name != 'registrations'
    = link_to t('.sign_up'),
              new_registration_path(resource_name)
  - if controller_name != 'sessions'
    = link_to t('.sign_in'),
              new_session_path(resource_name)
