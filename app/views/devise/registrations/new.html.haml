= render 'devise/nav'

= form_for resource,
           as: resource_name,
           url: registration_path(resource_name),
           html: { class: 'form' } do |f|
  = render 'shared/form_errors', resource:

  .form-group
    = f.label :name, t('.name')
    = f.text_field :name,
                   autofocus: true,
                   autocomplete: 'name'

  .form-group
    = f.label :email
    = f.email_field :email,
                    autocomplete: 'email'

  .form-group
    = f.label :password
    = f.password_field :password, autocomplete: 'new-password'
    %small #{@minimum_password_length} characters minimum

  .form-group
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: 'new-password'

  - if params[:organisation_id]
    = f.hidden_field :organisation_id,
                     value: params[:organisation_id]
  - else
    .form-group
      = f.label :organisation, t('.organisation')
      = f.select :organisation_id,
                 Organisation.pluck(:name, :id)

  .actions
    = f.submit t('.sign_up'),
               class: 'btn btn-primary w-full'

= render 'devise/shared/links'
