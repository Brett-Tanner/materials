:ruby
  common = 'flex flex-col'
  desktop = ''
  mobile = ''

%nav{ class: 'fixed top-0 left-0 h-screen bg-main w-16 print:hidden ' \
             'z-50 flex flex-col rounded-e',
      data: { controller: 'nav' },
      id: 'main-nav' }
  .flex
    = image_tag 'hamburger.svg'
    %image.link-text{ height: '64px', width: '120px',
                      src: org_favicon(current_user.presence) }
  = link_to root_path,
            class: main_nav_class('home', '') do
    = image_tag 'home.svg'
    .link-text= t('.home')

  %div{ class: "#{common} #{desktop} #{mobile}",
        data: { 'nav-target': 'links' },
        id: 'main_nav_links' }
    = render "#{current_user.type.pluralize.underscore}/nav"
  .flex-grow
  = render 'admins/theme_select' if current_user.is?('Admin')
  = locale_toggle
  = link_to destroy_user_session_path,
            data: { turbo_method: :delete },
            class: 'p-2 transition hover:scale-105 text-nowrap' do
    .link-text= t('.sign_out')
