-# locals: (classes: '', text:)

%header{ class: 'w-full bg-neutral-light text-neutral-dark font-extrabold py-2 px-3 ' \
                "absolute top-0 left-0 h-14 #{classes}" }
  - unless viewing_self?
    = link_to :back,
              class: 'absolute inset-y-1/2 inset-x-20 flex items-center gap-2 print:hidden' do
      .w-0.h-0.border-r-8.border-r-neutral-dark.border-y-8.border-y-transparent.mt-1
      %span.hidden.md:block= t('.back')
  %h1= text
