- classes = 'flex justify-between items-center gap-3 rounded p-2 transition-opacity duration-300'

.flex.flex-col.fixed.top-3.right-3.text-white
  - flash.each do |type, msg|
    %div{ aria: { label: 'Dismiss',
                  live: 'assertive',
                  atomic: 'true' },
          class: "#{classes} #{type == 'notice' ? 'bg-green-700' : 'bg-red-500'}",
          data: { controller: 'flash', 'flash-target': 'container' } }
      = msg
      %button{ class: 'flex items-center border border-white rounded font-semibold px-2',
               data: { action: 'click->flash#dismiss' },
               role: 'alert',
               type: 'button' } X
