- classes = 'flex justify-between items-center gap-2 rounded p-3 transition-opacity duration-300'

%aside{ class: 'flex flex-col fixed top-1.5 right-1.5 text-white text-sm z-50' }
  - flash.each do |type, msg|
    %div{ aria: { label: 'Dismiss',
                  live: 'assertive',
                  atomic: 'true' },
          class: "#{classes} #{type == 'notice' ? 'bg-success' : 'bg-danger'}",
          data: { controller: 'flash', 'flash-target': 'container' } }
      = simple_format msg
      %button{ class: 'flex items-center font-semibold px-2 opacity-50 hover:opacity-100',
               data: { action: 'click->flash#dismiss' },
               role: 'alert',
               type: 'button' } X
