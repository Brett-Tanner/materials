-# locals: (lesson:)

%div{ class: 'basis-[30%] shrink-0 grow flex flex-col justify-start gap-5 p-3' }
  %h2.font-bold.text-center= lesson.title
  .flex.gap-1.justify-center
    - if lesson.subtype
      %h4.font-bold.text-center #{lesson.subtype.titleize}:
    %h4.font-bold.text-center
      = lesson.kindy? ? 'Kindy' : 'Elementary'
  = image_tag type_icon_path(lesson), class: 'w-full'
  = render 'teachers/lesson_resources', lesson:
