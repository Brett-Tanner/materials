-# locals: (index: false, request:)

- prio_colors = { 'low' => 'bg-success', 'medium' => 'bg-warn',
                  'high' => 'bg-danger' }

.w-full.flex.flex-col.md:flex-row.gap-2.items-start.md:items-center.md:justify-center.text-left.md:text-center
  .w-full.md:w-fit.flex.items-center.gap-2
    %p{ class: "rounded-full p-2 #{prio_colors[request.priority]}" }
    - if index
      %h3.btn.btn-outline.text-sm.p-1
        = request.category.titleize
    %h1.font-bold.truncate= request.subject
  .w-full.md:w-fit.flex.justify-center
    = render 'support_requests/resolved' if request.resolved?
  - if index
    .hidden.md:block.grow
    = render 'shared/svgs/next', classes: 'fill-secondary-50 w-8 h-8 hidden md:block'
