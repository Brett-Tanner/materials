-# locals: (organisation:)

.flex.flex-col.justify-between.gap-2.p-3.rounded.border
  .flex.flex-col
    = link_to organisation.name,
              organisation_path(organisation),
              class: 'text-2xl'
    %h3= organisation.email
    %h3= organisation.phone
  %p= organisation.notes
  = link_to t('.edit_organisation'),
            edit_organisation_path(organisation),
            class: 'btn btn-primary'
