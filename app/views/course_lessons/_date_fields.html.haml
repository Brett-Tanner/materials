-# locals: (f:, table: false)

- if table
  %div{ class: 'basis-1/5' }= f.number_field :week, min: 1, max: 52, class: 'w-10'
  %div{ class: 'basis-1/5' }= f.select :day, CourseLesson.days.map { |k, _v| [k[0].capitalize, k] }
  = f.hidden_field :course_id

- else
  %div{ class: 'form-group basis-1/4' }
    = f.label :week
    = f.number_field :week, min: 1, max: 52

  %div{ class: 'form-group basis-1/4' }
    = f.label :day
    = f.select :day, CourseLesson.days.map { |k, _v| [k.capitalize, k] }
