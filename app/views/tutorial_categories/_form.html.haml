-# locals: (category:)

= form_with model: category,
            html: { class: 'form', id: 'tutorial_category_form' } do |f|
  = render 'shared/form_errors', resource: category

  .form-group
    = f.label :title
    = f.text_field :title,
                   required: true

  .flex.items-center.gap-3
    %div{ class: 'w-1/3' }
      - if category.svg.attached?
        = sanitized_svg(category.svg)
      - else
        .flex.items-center.justify-center
          %p No SVG attached

    .form-group
      = f.label :svg, 'SVG'
      = f.file_field :svg,
                     accept: TutorialCategory::VALID_FILETYPES

  = f.submit class: 'btn btn-main'
