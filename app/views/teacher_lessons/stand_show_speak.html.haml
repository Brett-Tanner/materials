= turbo_frame_tag 'lesson' do
  .content
    %header.md:mb-20
      %h1.col-span-4.text-start.font-bold.text-2xl.border-b-2.border-secondary
        Stand Show Speak
      = image_tag 'lesson_types/stand_show_speak.svg'

    %section{ class: 'flex flex-wrap gap-6 justify-around items-center overflow-y-scroll' }
      - @type_lessons.each do |l|
        - next unless l.guide.attached?

        %article{ class: 'h-full basis-full md:basis-3/12 flex flex-col gap-3' }
          = link_to file_path(id: l.guide.blob.id),
                    target: '_blank',
                    rel: 'noopener',
                    class: 'h-full flex flex-col gap-3' do
            %h2.hidden.md:block.text-center.text-lg.font-semibold
              = l.short_level.upcase
            = image_tag level_icon_path(l)
            .btn-outline
              %span{ class: 'basis-5/6 truncate' } Script
              = render 'shared/svgs/download_icon',
                       classes: 'fill-secondary'
