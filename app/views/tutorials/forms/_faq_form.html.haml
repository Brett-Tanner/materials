= form_with model: @tutorial, url: tutorials_path(type: 'FAQ'), local: true, html: { class: 'form', data: { controller: 'fields' } } do |f|
  = f.hidden_field :type, value: 'FAQ'

  = render 'shared/form_errors', resource: @tutorial

  .form-group
    = f.label :question
    = f.text_field :question, required: true

  .form-group
    = f.label :answer
    = f.text_area :answer, required: true

  .form-group
    = f.submit 'Create FAQ Tutorial', class: 'btn btn-primary'
