-# locals: (students:)

= turbo_frame_tag 'student_table' do
  %table.w-full.text-center
    %thead
      %tr.text-secondary
        %th.thead.thead-s.bg-secondary-50
          = t('.name')
        %th.thead.bg-secondary-50
          = t('.student_id')
        %th.thead.bg-secondary-50
          = t('.school')
        %th.thead.thead-e.bg-secondary-50
          = t('.level')
    %tbody
      - students.each do |student|
        %tr
          %td.p-2
            = link_to redact(student),
                      student_path(student),
                      data: { 'turbo-frame': '_top' }
          %td.p-2
            = link_to student.student_id || 'なし',
                      student_path(student),
                      data: { 'turbo-frame': '_top' }
          %td.p-2= student.school.name
          %td.p-2= student.level.titleize
