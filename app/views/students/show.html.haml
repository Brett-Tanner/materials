  %section{ class: 'basis-2/6' }
    = render 'students/details',
             student: @student,
             classes: @classes,
             potential_classes: @potential_classes,
             teachers: @teachers

  %section{ class: 'basis-4/6 flex flex-col gap-6' }
    = render 'students/test_details'
